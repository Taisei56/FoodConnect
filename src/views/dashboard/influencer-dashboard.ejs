<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Influencer Dashboard - FoodConnect Malaysia</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        .sidebar {
            background: linear-gradient(135deg, #ffeaa7 0%, #fab1a0 100%);
            min-height: 100vh;
            color: #2d3436;
        }
        .sidebar .nav-link {
            color: rgba(45, 52, 54, 0.8);
            border-radius: 10px;
            margin: 2px 0;
            transition: all 0.3s ease;
        }
        .sidebar .nav-link:hover, .sidebar .nav-link.active {
            background: rgba(45, 52, 54, 0.1);
            color: #2d3436;
        }
        .main-content {
            background: #f8f9fa;
            min-height: 100vh;
        }
        .stat-card {
            background: white;
            border-radius: 15px;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.08);
            transition: transform 0.3s ease;
        }
        .stat-card:hover {
            transform: translateY(-5px);
        }
        .campaign-card {
            background: white;
            border-radius: 15px;
            border: 1px solid #e9ecef;
            transition: all 0.3s ease;
        }
        .campaign-card:hover {
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
        }
        .tier-badge {
            background: linear-gradient(135deg, #ffeaa7 0%, #fab1a0 100%);
            color: #2d3436;
            font-weight: bold;
            padding: 8px 16px;
            border-radius: 20px;
            font-size: 0.8rem;
        }
        .platform-badge {
            background: #e9ecef;
            color: #495057;
            padding: 4px 8px;
            border-radius: 15px;
            font-size: 0.7rem;
            margin: 2px;
        }
        .earnings-card {
            background: linear-gradient(135deg, #00b894 0%, #00a085 100%);
            color: white;
            border-radius: 15px;
        }
    </style>
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <div class="col-md-3 col-lg-2 px-0">
                <div class="sidebar p-3">
                    <div class="text-center mb-4">
                        <% if (influencer.profile_picture) { %>
                            <img src="<%= influencer.profile_picture %>" alt="Profile" class="rounded-circle mb-2" width="60" height="60">
                        <% } else { %>
                            <i class="fas fa-user-circle fa-3x mb-2"></i>
                        <% } %>
                        <h5><%= influencer.display_name %></h5>
                        <span class="tier-badge"><%= influencer.tier?.toUpperCase() %> Tier</span>
                    </div>

                    <nav class="nav flex-column">
                        <a class="nav-link active" href="#dashboard" data-section="dashboard">
                            <i class="fas fa-chart-line me-2"></i>Dashboard
                        </a>
                        <a class="nav-link" href="#campaigns" data-section="campaigns">
                            <i class="fas fa-search me-2"></i>Find Campaigns
                        </a>
                        <a class="nav-link" href="#applications" data-section="applications">
                            <i class="fas fa-file-alt me-2"></i>My Applications
                        </a>
                        <a class="nav-link" href="#content" data-section="content">
                            <i class="fas fa-photo-video me-2"></i>Content Hub
                        </a>
                        <a class="nav-link" href="#earnings" data-section="earnings">
                            <i class="fas fa-money-bill-wave me-2"></i>Earnings
                        </a>
                        <a class="nav-link" href="#messages" data-section="messages">
                            <i class="fas fa-envelope me-2"></i>Messages
                            <% if (unreadMessages > 0) { %>
                                <span class="badge bg-danger ms-auto"><%= unreadMessages %></span>
                            <% } %>
                        </a>
                        <a class="nav-link" href="#profile" data-section="profile">
                            <i class="fas fa-user me-2"></i>Profile
                        </a>
                    </nav>

                    <div class="mt-auto pt-4">
                        <a href="/auth/logout" class="nav-link">
                            <i class="fas fa-sign-out-alt me-2"></i>Logout
                        </a>
                    </div>
                </div>
            </div>

            <!-- Main Content -->
            <div class="col-md-9 col-lg-10">
                <div class="main-content p-4">
                    <!-- Header -->
                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <div>
                            <h2>Welcome back, <%= influencer.display_name %>!</h2>
                            <p class="text-muted">Ready to create amazing content today?</p>
                        </div>
                        <a href="#campaigns" class="btn btn-warning" data-section="campaigns">
                            <i class="fas fa-search me-2"></i>Find Campaigns
                        </a>
                    </div>

                    <!-- Dashboard Section -->
                    <div id="dashboardSection">
                        <!-- Stats Cards -->
                        <div class="row mb-4">
                            <div class="col-md-3 mb-3">
                                <div class="stat-card p-4">
                                    <div class="d-flex align-items-center">
                                        <div class="flex-grow-1">
                                            <h3 class="text-primary mb-0"><%= stats.active_applications %></h3>
                                            <p class="text-muted mb-0">Active Applications</p>
                                        </div>
                                        <i class="fas fa-file-alt fa-2x text-primary opacity-50"></i>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3 mb-3">
                                <div class="stat-card p-4">
                                    <div class="d-flex align-items-center">
                                        <div class="flex-grow-1">
                                            <h3 class="text-success mb-0"><%= stats.completed_campaigns %></h3>
                                            <p class="text-muted mb-0">Completed</p>
                                        </div>
                                        <i class="fas fa-check-circle fa-2x text-success opacity-50"></i>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3 mb-3">
                                <div class="stat-card p-4">
                                    <div class="d-flex align-items-center">
                                        <div class="flex-grow-1">
                                            <h3 class="text-info mb-0"><%= stats.pending_content %></h3>
                                            <p class="text-muted mb-0">Content Pending</p>
                                        </div>
                                        <i class="fas fa-clock fa-2x text-info opacity-50"></i>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3 mb-3">
                                <div class="earnings-card p-4">
                                    <div class="d-flex align-items-center">
                                        <div class="flex-grow-1">
                                            <h3 class="mb-0">RM <%= stats.total_earnings || 0 %></h3>
                                            <p class="mb-0 opacity-75">Total Earnings</p>
                                        </div>
                                        <i class="fas fa-money-bill-wave fa-2x opacity-75"></i>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Social Media Stats -->
                        <div class="row mb-4">
                            <div class="col-lg-8 mb-4">
                                <div class="stat-card p-4">
                                    <h5 class="mb-4">Social Media Overview</h5>
                                    <div class="row">
                                        <% if (influencer.instagram_username) { %>
                                            <div class="col-md-6 mb-3">
                                                <div class="d-flex align-items-center p-3 border rounded">
                                                    <i class="fab fa-instagram fa-2x text-danger me-3"></i>
                                                    <div>
                                                        <h6 class="mb-0">@<%= influencer.instagram_username %></h6>
                                                        <small class="text-muted"><%= influencer.instagram_followers || 0 %> followers</small>
                                                    </div>
                                                </div>
                                            </div>
                                        <% } %>
                                        <% if (influencer.tiktok_username) { %>
                                            <div class="col-md-6 mb-3">
                                                <div class="d-flex align-items-center p-3 border rounded">
                                                    <i class="fab fa-tiktok fa-2x text-dark me-3"></i>
                                                    <div>
                                                        <h6 class="mb-0">@<%= influencer.tiktok_username %></h6>
                                                        <small class="text-muted"><%= influencer.tiktok_followers || 0 %> followers</small>
                                                    </div>
                                                </div>
                                            </div>
                                        <% } %>
                                        <% if (influencer.xhs_username) { %>
                                            <div class="col-md-6 mb-3">
                                                <div class="d-flex align-items-center p-3 border rounded">
                                                    <i class="fas fa-book fa-2x text-warning me-3"></i>
                                                    <div>
                                                        <h6 class="mb-0"><%= influencer.xhs_username %></h6>
                                                        <small class="text-muted"><%= influencer.xhs_followers || 0 %> followers</small>
                                                    </div>
                                                </div>
                                            </div>
                                        <% } %>
                                        <% if (influencer.youtube_username) { %>
                                            <div class="col-md-6 mb-3">
                                                <div class="d-flex align-items-center p-3 border rounded">
                                                    <i class="fab fa-youtube fa-2x text-danger me-3"></i>
                                                    <div>
                                                        <h6 class="mb-0"><%= influencer.youtube_username %></h6>
                                                        <small class="text-muted"><%= influencer.youtube_followers || 0 %> subscribers</small>
                                                    </div>
                                                </div>
                                            </div>
                                        <% } %>
                                    </div>

                                    <div class="text-center mt-3">
                                        <button class="btn btn-outline-primary btn-sm" data-bs-toggle="modal" data-bs-target="#updateFollowersModal">
                                            <i class="fas fa-sync-alt me-2"></i>Update Follower Counts
                                        </button>
                                    </div>
                                </div>
                            </div>

                            <div class="col-lg-4 mb-4">
                                <div class="stat-card p-4">
                                    <h5 class="mb-4">Quick Actions</h5>
                                    <div class="d-grid gap-2">
                                        <a href="#campaigns" class="btn btn-outline-warning" data-section="campaigns">
                                            <i class="fas fa-search me-2"></i>Browse Campaigns
                                        </a>
                                        <a href="#content" class="btn btn-outline-info" data-section="content">
                                            <i class="fas fa-upload me-2"></i>Submit Content
                                        </a>
                                        <a href="#applications" class="btn btn-outline-success" data-section="applications">
                                            <i class="fas fa-file-alt me-2"></i>My Applications
                                        </a>
                                        <a href="#earnings" class="btn btn-outline-success" data-section="earnings">
                                            <i class="fas fa-money-bill-wave me-2"></i>View Earnings
                                        </a>
                                    </div>

                                    <hr class="my-4">

                                    <h6 class="mb-3">Recent Activity</h6>
                                    <% if (recentActivity && recentActivity.length > 0) { %>
                                        <% recentActivity.forEach(activity => { %>
                                            <div class="d-flex align-items-center mb-2">
                                                <i class="fas fa-circle fa-xs text-primary me-2"></i>
                                                <small class="text-muted"><%= activity.message %></small>
                                            </div>
                                        <% }) %>
                                    <% } else { %>
                                        <p class="text-muted small">No recent activity</p>
                                    <% } %>
                                </div>
                            </div>
                        </div>

                        <!-- Recent Applications -->
                        <div class="stat-card p-4">
                            <div class="d-flex justify-content-between align-items-center mb-4">
                                <h5 class="mb-0">Recent Applications</h5>
                                <a href="#applications" data-section="applications" class="btn btn-outline-primary btn-sm">View All</a>
                            </div>

                            <% if (recentApplications && recentApplications.length > 0) { %>
                                <div class="row">
                                    <% recentApplications.forEach(application => { %>
                                        <div class="col-lg-6 mb-3">
                                            <div class="campaign-card p-3">
                                                <div class="d-flex justify-content-between align-items-start mb-2">
                                                    <h6 class="mb-0"><%= application.campaign_title %></h6>
                                                    <span class="badge bg-<%= application.status === 'approved' ? 'success' : application.status === 'pending' ? 'warning' : 'secondary' %>">
                                                        <%= application.status?.charAt(0).toUpperCase() + application.status?.slice(1) %>
                                                    </span>
                                                </div>
                                                <p class="text-muted small mb-2"><%= application.restaurant_name %></p>
                                                <div class="d-flex justify-content-between align-items-center">
                                                    <small class="text-muted">
                                                        <i class="fas fa-clock me-1"></i>
                                                        Applied <%= new Date(application.created_at).toLocaleDateString() %>
                                                    </small>
                                                    <div>
                                                        <% if (application.platforms) { %>
                                                            <% application.platforms.forEach(platform => { %>
                                                                <span class="platform-badge"><%= platform %></span>
                                                            <% }) %>
                                                        <% } %>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    <% }) %>
                                </div>
                            <% } else { %>
                                <div class="text-center py-5">
                                    <i class="fas fa-file-alt fa-3x text-muted mb-3"></i>
                                    <h5>No applications yet</h5>
                                    <p class="text-muted">Start applying to campaigns to grow your influence!</p>
                                    <a href="#campaigns" class="btn btn-warning" data-section="campaigns">
                                        Find Campaigns
                                    </a>
                                </div>
                            <% } %>
                        </div>
                    </div>

                    <!-- Other sections will be loaded via AJAX -->
                    <div id="dynamicContent" style="display: none;"></div>
                </div>
            </div>
        </div>
    </div>

    <!-- Update Followers Modal -->
    <div class="modal fade" id="updateFollowersModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Update Follower Counts</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <form action="/influencer/update-followers" method="POST">
                    <div class="modal-body">
                        <p class="text-muted small">Update your follower counts to ensure accurate campaign matching. Changes will be reviewed by our admin team.</p>

                        <% if (influencer.instagram_username) { %>
                            <div class="mb-3">
                                <label class="form-label">Instagram Followers</label>
                                <input type="number" class="form-control" name="instagram_followers"
                                       value="<%= influencer.instagram_followers || 0 %>" min="0">
                            </div>
                        <% } %>

                        <% if (influencer.tiktok_username) { %>
                            <div class="mb-3">
                                <label class="form-label">TikTok Followers</label>
                                <input type="number" class="form-control" name="tiktok_followers"
                                       value="<%= influencer.tiktok_followers || 0 %>" min="0">
                            </div>
                        <% } %>

                        <% if (influencer.xhs_username) { %>
                            <div class="mb-3">
                                <label class="form-label">XHS Followers</label>
                                <input type="number" class="form-control" name="xhs_followers"
                                       value="<%= influencer.xhs_followers || 0 %>" min="0">
                            </div>
                        <% } %>

                        <% if (influencer.youtube_username) { %>
                            <div class="mb-3">
                                <label class="form-label">YouTube Subscribers</label>
                                <input type="number" class="form-control" name="youtube_followers"
                                       value="<%= influencer.youtube_followers || 0 %>" min="0">
                            </div>
                        <% } %>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-primary">Submit for Review</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Navigation
        document.querySelectorAll('.nav-link[data-section]').forEach(link => {
            link.addEventListener('click', function(e) {
                e.preventDefault();
                const section = this.dataset.section;

                // Update active nav
                document.querySelectorAll('.nav-link').forEach(l => l.classList.remove('active'));
                this.classList.add('active');

                if (section === 'dashboard') {
                    document.getElementById('dashboardSection').style.display = 'block';
                    document.getElementById('dynamicContent').style.display = 'none';
                } else {
                    document.getElementById('dashboardSection').style.display = 'none';
                    document.getElementById('dynamicContent').style.display = 'block';
                    loadSection(section);
                }
            });
        });

        function loadSection(section) {
            // Show loading
            document.getElementById('dynamicContent').innerHTML = '<div class="text-center py-5"><i class="fas fa-spinner fa-spin fa-2x"></i></div>';

            // Load section content via AJAX
            fetch(`/dashboard/influencer/${section}`)
                .then(response => response.text())
                .then(html => {
                    document.getElementById('dynamicContent').innerHTML = html;
                })
                .catch(error => {
                    document.getElementById('dynamicContent').innerHTML = '<div class="alert alert-danger">Error loading content</div>';
                });
        }
    </script>
</body>
</html>