<%- include('layout', {body: `
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-6 text-center">
            <div class="card dashboard-card">
                <div class="card-body p-5">
                    <% if (success) { %>
                        <div class="feature-icon feature-icon-emerald mx-auto mb-4" style="width: 100px; height: 100px; font-size: 3rem;">
                            <i class="fas fa-check-circle"></i>
                        </div>
                        <h1 class="gradient-text-emerald mb-4">Email Verified! ✅</h1>
                    <% } else { %>
                        <div class="feature-icon feature-icon-warning mx-auto mb-4" style="width: 100px; height: 100px; font-size: 3rem;">
                            <i class="fas fa-exclamation-triangle"></i>
                        </div>
                        <h1 class="gradient-text-orange mb-4">Verification Failed ❌</h1>
                    <% } %>
                    
                    <p class="lead text-muted mb-4"><%= message %></p>
                    
                    <% if (success) { %>
                        <div class="alert alert-success">
                            <i class="fas fa-rocket me-2"></i>
                            <strong>Welcome aboard!</strong> You can now log in to your FoodConnect Malaysia account.
                        </div>
                        <a href="/login" class="btn btn-primary btn-lg me-3">
                            <i class="fas fa-sign-in-alt me-2"></i>Login Now
                        </a>
                    <% } else { %>
                        <div class="alert alert-warning">
                            <i class="fas fa-redo me-2"></i>
                            Need a new verification email? You can request one from the login page.
                        </div>
                    <% } %>
                    
                    <a href="/" class="btn btn-light btn-lg mt-3">
                        <i class="fas fa-home me-2"></i>Back to Home
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
`}) %>