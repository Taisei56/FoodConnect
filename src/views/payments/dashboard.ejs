<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Payment Dashboard - FoodConnect Malaysia</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        body {
            background: #f8f9fa;
        }
        .payment-card {
            background: white;
            border-radius: 15px;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.08);
            border-left: 4px solid;
            transition: transform 0.3s ease;
        }
        .payment-card:hover {
            transform: translateY(-2px);
        }
        .payment-card.pending { border-left-color: #ffc107; }
        .payment-card.received { border-left-color: #20c997; }
        .payment-card.held { border-left-color: #6f42c1; }
        .payment-card.released { border-left-color: #28a745; }
        .payment-card.cancelled { border-left-color: #dc3545; }

        .stat-card {
            background: white;
            border-radius: 15px;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.08);
            transition: transform 0.3s ease;
        }
        .stat-card:hover {
            transform: translateY(-5px);
        }
        .status-badge {
            padding: 6px 12px;
            border-radius: 20px;
            font-size: 0.8rem;
            font-weight: bold;
        }
        .timeline-item {
            border-left: 3px solid #e9ecef;
            position: relative;
        }
        .timeline-item::before {
            content: '';
            width: 12px;
            height: 12px;
            border-radius: 50%;
            background: #6c757d;
            position: absolute;
            left: -7.5px;
            top: 15px;
        }
        .timeline-item.completed::before {
            background: #28a745;
        }
        .timeline-item.active::before {
            background: #007bff;
        }
        .payment-method-card {
            border: 2px solid #e9ecef;
            border-radius: 15px;
            transition: all 0.3s ease;
            cursor: pointer;
        }
        .payment-method-card:hover, .payment-method-card.selected {
            border-color: #007bff;
            background: rgba(0, 123, 255, 0.05);
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
        <div class="container">
            <a class="navbar-brand fw-bold" href="/">
                <i class="fas fa-utensils me-2"></i>FoodConnect Malaysia
            </a>
            <div class="navbar-nav ms-auto">
                <a class="nav-link" href="/dashboard">
                    <i class="fas fa-tachometer-alt me-1"></i>Dashboard
                </a>
            </div>
        </div>
    </nav>

    <div class="container py-4">
        <!-- Header -->
        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                <h2 class="fw-bold">Payment Dashboard</h2>
                <p class="text-muted">Manage your campaign payments and transactions</p>
            </div>
            <% if (userType === 'restaurant') { %>
                <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#processPaymentModal">
                    <i class="fas fa-credit-card me-2"></i>Process Payment
                </button>
            <% } %>
        </div>

        <!-- Stats Cards -->
        <div class="row mb-4">
            <% if (userType === 'restaurant') { %>
                <div class="col-md-3 mb-3">
                    <div class="stat-card p-4">
                        <div class="d-flex align-items-center">
                            <div class="flex-grow-1">
                                <h3 class="text-warning mb-0">RM <%= stats.pending_payments || 0 %></h3>
                                <p class="text-muted mb-0">Pending Payments</p>
                            </div>
                            <i class="fas fa-clock fa-2x text-warning opacity-50"></i>
                        </div>
                    </div>
                </div>
                <div class="col-md-3 mb-3">
                    <div class="stat-card p-4">
                        <div class="d-flex align-items-center">
                            <div class="flex-grow-1">
                                <h3 class="text-info mb-0">RM <%= stats.total_paid || 0 %></h3>
                                <p class="text-muted mb-0">Total Paid</p>
                            </div>
                            <i class="fas fa-money-bill-wave fa-2x text-info opacity-50"></i>
                        </div>
                    </div>
                </div>
                <div class="col-md-3 mb-3">
                    <div class="stat-card p-4">
                        <div class="d-flex align-items-center">
                            <div class="flex-grow-1">
                                <h3 class="text-success mb-0"><%= stats.active_campaigns || 0 %></h3>
                                <p class="text-muted mb-0">Active Campaigns</p>
                            </div>
                            <i class="fas fa-bullhorn fa-2x text-success opacity-50"></i>
                        </div>
                    </div>
                </div>
                <div class="col-md-3 mb-3">
                    <div class="stat-card p-4">
                        <div class="d-flex align-items-center">
                            <div class="flex-grow-1">
                                <h3 class="text-primary mb-0">RM <%= stats.platform_fees || 0 %></h3>
                                <p class="text-muted mb-0">Platform Fees</p>
                            </div>
                            <i class="fas fa-percentage fa-2x text-primary opacity-50"></i>
                        </div>
                    </div>
                </div>
            <% } else { %>
                <div class="col-md-3 mb-3">
                    <div class="stat-card p-4">
                        <div class="d-flex align-items-center">
                            <div class="flex-grow-1">
                                <h3 class="text-success mb-0">RM <%= stats.total_earnings || 0 %></h3>
                                <p class="text-muted mb-0">Total Earnings</p>
                            </div>
                            <i class="fas fa-money-bill-wave fa-2x text-success opacity-50"></i>
                        </div>
                    </div>
                </div>
                <div class="col-md-3 mb-3">
                    <div class="stat-card p-4">
                        <div class="d-flex align-items-center">
                            <div class="flex-grow-1">
                                <h3 class="text-warning mb-0">RM <%= stats.pending_earnings || 0 %></h3>
                                <p class="text-muted mb-0">Pending</p>
                            </div>
                            <i class="fas fa-clock fa-2x text-warning opacity-50"></i>
                        </div>
                    </div>
                </div>
                <div class="col-md-3 mb-3">
                    <div class="stat-card p-4">
                        <div class="d-flex align-items-center">
                            <div class="flex-grow-1">
                                <h3 class="text-info mb-0">RM <%= stats.this_month || 0 %></h3>
                                <p class="text-muted mb-0">This Month</p>
                            </div>
                            <i class="fas fa-calendar fa-2x text-info opacity-50"></i>
                        </div>
                    </div>
                </div>
                <div class="col-md-3 mb-3">
                    <div class="stat-card p-4">
                        <div class="d-flex align-items-center">
                            <div class="flex-grow-1">
                                <h3 class="text-primary mb-0"><%= stats.completed_campaigns || 0 %></h3>
                                <p class="text-muted mb-0">Completed</p>
                            </div>
                            <i class="fas fa-check-circle fa-2x text-primary opacity-50"></i>
                        </div>
                    </div>
                </div>
            <% } %>
        </div>

        <!-- Payments List -->
        <div class="row">
            <div class="col-lg-8 mb-4">
                <div class="stat-card p-4">
                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <h5 class="mb-0">Recent Payments</h5>
                        <div class="btn-group btn-group-sm">
                            <button class="btn btn-outline-primary active" onclick="filterPayments('all')">All</button>
                            <button class="btn btn-outline-primary" onclick="filterPayments('pending')">Pending</button>
                            <button class="btn btn-outline-primary" onclick="filterPayments('received')">Received</button>
                            <button class="btn btn-outline-primary" onclick="filterPayments('released')">Released</button>
                        </div>
                    </div>

                    <% if (payments && payments.length > 0) { %>
                        <% payments.forEach(payment => { %>
                            <div class="payment-card p-4 mb-3 <%= payment.status %>" data-status="<%= payment.status %>">
                                <div class="row align-items-center">
                                    <div class="col-md-6">
                                        <h6 class="fw-bold mb-1"><%= payment.campaign_title %></h6>
                                        <p class="text-muted small mb-2">
                                            <% if (userType === 'restaurant') { %>
                                                <i class="fas fa-user me-1"></i>
                                                <%= payment.influencer_name %>
                                            <% } else { %>
                                                <i class="fas fa-utensils me-1"></i>
                                                <%= payment.business_name %>
                                            <% } %>
                                        </p>
                                        <small class="text-muted">
                                            <i class="fas fa-calendar me-1"></i>
                                            <%= new Date(payment.created_at).toLocaleDateString() %>
                                        </small>
                                    </div>
                                    <div class="col-md-3 text-center">
                                        <div class="mb-2">
                                            <h6 class="text-primary mb-0">RM <%= payment.amount %></h6>
                                            <% if (userType === 'restaurant') { %>
                                                <small class="text-muted">+ RM <%= payment.platform_fee %> fee</small>
                                            <% } else { %>
                                                <small class="text-muted">Net: RM <%= payment.net_amount %></small>
                                            <% } %>
                                        </div>
                                    </div>
                                    <div class="col-md-3 text-end">
                                        <span class="status-badge bg-<%= payment.status === 'pending' ? 'warning' : payment.status === 'received' ? 'info' : payment.status === 'held' ? 'purple' : payment.status === 'released' ? 'success' : 'danger' %>">
                                            <%= payment.status.charAt(0).toUpperCase() + payment.status.slice(1) %>
                                        </span>
                                        <div class="mt-2">
                                            <button class="btn btn-outline-primary btn-sm" onclick="viewPaymentDetails(<%= payment.id %>)">
                                                <i class="fas fa-eye"></i> Details
                                            </button>
                                        </div>
                                    </div>
                                </div>

                                <% if (payment.transaction_reference) { %>
                                    <div class="mt-3 pt-3 border-top">
                                        <small class="text-muted">
                                            <i class="fas fa-receipt me-1"></i>
                                            Transaction: <%= payment.transaction_reference %>
                                        </small>
                                    </div>
                                <% } %>
                            </div>
                        <% }) %>
                    <% } else { %>
                        <div class="text-center py-5">
                            <i class="fas fa-credit-card fa-3x text-muted mb-3"></i>
                            <h5>No payments yet</h5>
                            <p class="text-muted">
                                <% if (userType === 'restaurant') { %>
                                    Start creating campaigns to see payment information here
                                <% } else { %>
                                    Complete campaigns to start earning
                                <% } %>
                            </p>
                        </div>
                    <% } %>
                </div>
            </div>

            <div class="col-lg-4 mb-4">
                <!-- Payment Workflow -->
                <div class="stat-card p-4 mb-4">
                    <h5 class="mb-4">Payment Process</h5>
                    <div class="timeline">
                        <div class="timeline-item completed ps-4 pb-3">
                            <h6 class="mb-1">Campaign Created</h6>
                            <small class="text-muted">Restaurant creates campaign with budget</small>
                        </div>
                        <div class="timeline-item active ps-4 pb-3">
                            <h6 class="mb-1">Payment Due</h6>
                            <small class="text-muted">Restaurant transfers payment to admin</small>
                        </div>
                        <div class="timeline-item ps-4 pb-3">
                            <h6 class="mb-1">Payment Held</h6>
                            <small class="text-muted">Admin holds payment in escrow</small>
                        </div>
                        <div class="timeline-item ps-4 pb-3">
                            <h6 class="mb-1">Content Delivered</h6>
                            <small class="text-muted">Influencer completes campaign</small>
                        </div>
                        <div class="timeline-item ps-4">
                            <h6 class="mb-1">Payment Released</h6>
                            <small class="text-muted">Payment sent to influencer</small>
                        </div>
                    </div>
                </div>

                <!-- Quick Actions -->
                <div class="stat-card p-4">
                    <h5 class="mb-4">Quick Actions</h5>
                    <div class="d-grid gap-2">
                        <% if (userType === 'restaurant') { %>
                            <button class="btn btn-outline-primary" data-bs-toggle="modal" data-bs-target="#processPaymentModal">
                                <i class="fas fa-credit-card me-2"></i>Process Payment
                            </button>
                            <button class="btn btn-outline-info" onclick="downloadInvoices()">
                                <i class="fas fa-download me-2"></i>Download Invoices
                            </button>
                        <% } else { %>
                            <button class="btn btn-outline-success" onclick="requestPayment()">
                                <i class="fas fa-money-bill-wave me-2"></i>Request Payment
                            </button>
                            <button class="btn btn-outline-info" onclick="downloadEarningsReport()">
                                <i class="fas fa-chart-line me-2"></i>Earnings Report
                            </button>
                        <% } %>
                        <a href="/payments/history" class="btn btn-outline-secondary">
                            <i class="fas fa-history me-2"></i>Payment History
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Process Payment Modal -->
    <div class="modal fade" id="processPaymentModal" tabindex="-1">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Process Campaign Payment</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <form id="paymentForm">
                    <div class="modal-body">
                        <div class="mb-4">
                            <label class="form-label">Select Campaign</label>
                            <select class="form-select" name="campaign_id" required>
                                <option value="">Choose a campaign...</option>
                                <% if (pendingCampaigns) { %>
                                    <% pendingCampaigns.forEach(campaign => { %>
                                        <option value="<%= campaign.id %>" data-budget="<%= campaign.budget %>">
                                            <%= campaign.title %> - RM <%= campaign.budget %>
                                        </option>
                                    <% }) %>
                                <% } %>
                            </select>
                        </div>

                        <div id="paymentBreakdown" class="alert alert-info" style="display: none;">
                            <h6>Payment Breakdown</h6>
                            <div class="row">
                                <div class="col-4">
                                    <strong>Campaign Budget:</strong>
                                    <div id="campaignBudget">RM 0</div>
                                </div>
                                <div class="col-4">
                                    <strong>Platform Fee (15%):</strong>
                                    <div id="platformFee">RM 0</div>
                                </div>
                                <div class="col-4">
                                    <strong>Total Amount:</strong>
                                    <div id="totalAmount">RM 0</div>
                                </div>
                            </div>
                        </div>

                        <div class="mb-4">
                            <label class="form-label">Payment Method</label>
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <div class="payment-method-card p-3 text-center" data-method="touchngo">
                                        <i class="fas fa-mobile-alt fa-2x text-primary mb-2"></i>
                                        <h6>Touch 'n Go eWallet</h6>
                                        <small class="text-muted">Instant transfer</small>
                                        <input type="radio" name="payment_method" value="touchngo" class="d-none">
                                    </div>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <div class="payment-method-card p-3 text-center" data-method="bank">
                                        <i class="fas fa-university fa-2x text-success mb-2"></i>
                                        <h6>Bank Transfer</h6>
                                        <small class="text-muted">1-2 business days</small>
                                        <input type="radio" name="payment_method" value="bank" class="d-none">
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div id="bankDetails" style="display: none;">
                            <div class="alert alert-warning">
                                <h6><i class="fas fa-info-circle me-2"></i>Bank Transfer Details</h6>
                                <p><strong>Account Name:</strong> FoodConnect Malaysia Sdn Bhd</p>
                                <p><strong>Account Number:</strong> 1234567890</p>
                                <p><strong>Bank:</strong> Maybank</p>
                                <p class="mb-0">Please upload proof of transfer after making payment.</p>
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Upload Transfer Receipt</label>
                                <input type="file" class="form-control" name="transfer_receipt" accept="image/*,.pdf">
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Reference Number (Optional)</label>
                            <input type="text" class="form-control" name="reference" placeholder="Enter transaction reference">
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-primary">Process Payment</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Payment Details Modal -->
    <div class="modal fade" id="paymentDetailsModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Payment Details</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body" id="paymentDetailsContent">
                    <!-- Content will be loaded via AJAX -->
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Payment method selection
        document.querySelectorAll('.payment-method-card').forEach(card => {
            card.addEventListener('click', function() {
                document.querySelectorAll('.payment-method-card').forEach(c => c.classList.remove('selected'));
                this.classList.add('selected');
                this.querySelector('input[type="radio"]').checked = true;

                // Show/hide bank details
                const method = this.dataset.method;
                document.getElementById('bankDetails').style.display = method === 'bank' ? 'block' : 'none';
            });
        });

        // Campaign selection
        document.querySelector('select[name="campaign_id"]').addEventListener('change', function() {
            const option = this.options[this.selectedIndex];
            const budget = parseFloat(option.dataset.budget) || 0;
            const platformFee = budget * 0.15;
            const total = budget + platformFee;

            if (budget > 0) {
                document.getElementById('campaignBudget').textContent = `RM ${budget.toLocaleString()}`;
                document.getElementById('platformFee').textContent = `RM ${platformFee.toLocaleString()}`;
                document.getElementById('totalAmount').textContent = `RM ${total.toLocaleString()}`;
                document.getElementById('paymentBreakdown').style.display = 'block';
            } else {
                document.getElementById('paymentBreakdown').style.display = 'none';
            }
        });

        // Filter payments
        function filterPayments(status) {
            const cards = document.querySelectorAll('.payment-card');
            const buttons = document.querySelectorAll('.btn-group .btn');

            buttons.forEach(btn => btn.classList.remove('active'));
            event.target.classList.add('active');

            cards.forEach(card => {
                if (status === 'all' || card.dataset.status === status) {
                    card.style.display = 'block';
                } else {
                    card.style.display = 'none';
                }
            });
        }

        // View payment details
        function viewPaymentDetails(paymentId) {
            fetch(`/api/payments/${paymentId}`)
                .then(response => response.json())
                .then(payment => {
                    const content = `
                        <div class="row">
                            <div class="col-6"><strong>Campaign:</strong></div>
                            <div class="col-6">${payment.campaign_title}</div>
                        </div>
                        <div class="row">
                            <div class="col-6"><strong>Amount:</strong></div>
                            <div class="col-6">RM ${payment.amount}</div>
                        </div>
                        <div class="row">
                            <div class="col-6"><strong>Platform Fee:</strong></div>
                            <div class="col-6">RM ${payment.platform_fee}</div>
                        </div>
                        <div class="row">
                            <div class="col-6"><strong>Net Amount:</strong></div>
                            <div class="col-6">RM ${payment.net_amount}</div>
                        </div>
                        <div class="row">
                            <div class="col-6"><strong>Status:</strong></div>
                            <div class="col-6">${payment.status}</div>
                        </div>
                        ${payment.transaction_reference ? `
                            <div class="row">
                                <div class="col-6"><strong>Reference:</strong></div>
                                <div class="col-6">${payment.transaction_reference}</div>
                            </div>
                        ` : ''}
                    `;
                    document.getElementById('paymentDetailsContent').innerHTML = content;
                    new bootstrap.Modal(document.getElementById('paymentDetailsModal')).show();
                });
        }

        // Payment form submission
        document.getElementById('paymentForm').addEventListener('submit', function(e) {
            e.preventDefault();

            const formData = new FormData(this);

            fetch('/payments/process', {
                method: 'POST',
                body: formData
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    alert('Payment processed successfully!');
                    location.reload();
                } else {
                    alert('Error: ' + data.message);
                }
            })
            .catch(error => {
                alert('Error processing payment');
            });
        });

        function downloadInvoices() {
            window.open('/payments/invoices', '_blank');
        }

        function downloadEarningsReport() {
            window.open('/payments/earnings-report', '_blank');
        }

        function requestPayment() {
            // Implementation for payment request
            alert('Payment request feature coming soon!');
        }
    </script>
</body>
</html>