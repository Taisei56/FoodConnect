<script>
document.addEventListener('DOMContentLoaded', function() {
    // Load user info
    if (authManager.isAuthenticated()) {
        document.getElementById('user-email').textContent = authManager.user.email;
        document.getElementById('user-type').textContent = authManager.user.user_type.charAt(0).toUpperCase() + authManager.user.user_type.slice(1);
        
        // Set member since date (or registration date if available)
        const memberDate = new Date().toLocaleDateString();
        document.getElementById('member-since').textContent = memberDate;
    }

    // Countdown to October 2025
    function updateCountdown() {
        const targetDate = new Date('2025-10-01T00:00:00Z');
        const now = new Date();
        const diff = targetDate - now;

        if (diff > 0) {
            const months = Math.floor(diff / (1000 * 60 * 60 * 24 * 30));
            const days = Math.floor((diff % (1000 * 60 * 60 * 24 * 30)) / (1000 * 60 * 60 * 24));
            const hours = Math.floor((diff % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
            const minutes = Math.floor((diff % (1000 * 60 * 60)) / (1000 * 60));

            document.getElementById('months').textContent = months;
            document.getElementById('days').textContent = days;
            document.getElementById('hours').textContent = hours;
            document.getElementById('minutes').textContent = minutes;
        } else {
            document.getElementById('months').textContent = '00';
            document.getElementById('days').textContent = '00';
            document.getElementById('hours').textContent = '00';
            document.getElementById('minutes').textContent = '00';
        }
    }

    updateCountdown();
    setInterval(updateCountdown, 60000); // Update every minute
});
