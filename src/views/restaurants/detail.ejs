<%- include('../layout', {body: `
<div class="container">
    <div id="restaurant-content">
        <div class="text-center py-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
            <p class="mt-2">Loading restaurant details...</p>
        </div>
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const restaurantId = '<%= restaurantId %>';
    loadRestaurantDetails(restaurantId);
});

async function loadRestaurantDetails(restaurantId) {
    try {
        const response = await apiGet('/api/restaurants/' + restaurantId);
        
        if (response.ok) {
            const restaurant = await response.json();
            displayRestaurantDetails(restaurant);
            loadRestaurantCampaigns(restaurantId);
        } else {
            throw new Error('Restaurant not found');
        }
    } catch (error) {
        console.error('Failed to load restaurant:', error);
        document.getElementById('restaurant-content').innerHTML = 
            '<div class="alert alert-danger">Restaurant not found or failed to load.</div>';
    }
}

function displayRestaurantDetails(restaurant) {
    const content = document.getElementById('restaurant-content');
    
    content.innerHTML = \`
        <div class="row">
            <div class="col-lg-4 mb-4">
                <div class="card shadow-sm">
                    <div class="card-body text-center">
                        <img src="\${restaurant.profile_picture || '/images/default-restaurant.png'}" 
                             alt="\${restaurant.name}" 
                             class="profile-image mb-3">
                        <h4>\${restaurant.name}</h4>
                        <p class="text-muted">\${restaurant.cuisine_type || 'Restaurant'}</p>
                        
                        <div class="mb-3">
                            <div class="row text-center">
                                <div class="col-4">
                                    <div class="stat-number text-primary">\${restaurant.total_campaigns || 0}</div>
                                    <small class="text-muted">Campaigns</small>
                                </div>
                                <div class="col-4">
                                    <div class="stat-number text-success">\${restaurant.active_campaigns || 0}</div>
                                    <small class="text-muted">Active</small>
                                </div>
                                <div class="col-4">
                                    <div class="stat-number text-info">\${restaurant.collaborations || 0}</div>
                                    <small class="text-muted">Collabs</small>
                                </div>
                            </div>
                        </div>
                        
                        <div class="contact-info text-start">
                            <p class="mb-2">
                                <i class="fas fa-envelope text-muted me-2"></i>
                                <a href="mailto:\${restaurant.email}">\${restaurant.email}</a>
                            </p>
                            \${restaurant.phone ? \`
                                <p class="mb-2">
                                    <i class="fas fa-phone text-muted me-2"></i>\${restaurant.phone}
                                </p>
                            \` : ''}
                            \${restaurant.location ? \`
                                <p class="mb-2">
                                    <i class="fas fa-map-marker-alt text-muted me-2"></i>\${restaurant.location}
                                </p>
                            \` : ''}
                            \${restaurant.website ? \`
                                <p class="mb-2">
                                    <i class="fas fa-globe text-muted me-2"></i>
                                    <a href="\${restaurant.website}" target="_blank">Website</a>
                                </p>
                            \` : ''}
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="col-lg-8">
                <div class="card shadow-sm mb-4">
                    <div class="card-header">
                        <h5 class="mb-0">About \${restaurant.name}</h5>
                    </div>
                    <div class="card-body">
                        <p>\${restaurant.bio || 'No description available for this restaurant.'}</p>
                        
                        \${restaurant.cuisine_type ? \`
                            <div class="mb-3">
                                <strong>Cuisine Type:</strong> 
                                <span class="badge bg-primary ms-2">\${restaurant.cuisine_type}</span>
                            </div>
                        \` : ''}
                        
                        \${restaurant.opening_hours ? \`
                            <div class="mb-3">
                                <strong>Opening Hours:</strong> \${restaurant.opening_hours}
                            </div>
                        \` : ''}
                        
                        <div class="mb-3">
                            <strong>Member Since:</strong> \${formatDate(restaurant.created_date)}
                        </div>
                    </div>
                </div>
                
                <div class="card shadow-sm">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">Active Campaigns</h5>
                        <span class="badge bg-primary" id="campaigns-count">Loading...</span>
                    </div>
                    <div class="card-body">
                        <div id="campaigns-container">
                            <div class="text-center py-3">
                                <div class="spinner-border spinner-border-sm text-primary" role="status">
                                    <span class="visually-hidden">Loading...</span>
                                </div>
                                <p class="mt-2 mb-0">Loading campaigns...</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    \`;
}

async function loadRestaurantCampaigns(restaurantId) {
    try {
        const response = await apiGet('/api/campaigns?restaurant_id=' + restaurantId + '&status=active');
        const data = await response.json();
        
        displayCampaigns(data.campaigns || []);
    } catch (error) {
        console.error('Failed to load campaigns:', error);
        document.getElementById('campaigns-container').innerHTML = 
            '<div class="alert alert-warning">Failed to load campaigns.</div>';
    }
}

function displayCampaigns(campaigns) {
    const container = document.getElementById('campaigns-container');
    const countBadge = document.getElementById('campaigns-count');
    
    countBadge.textContent = campaigns.length;
    
    if (campaigns.length === 0) {
        container.innerHTML = 
            '<div class="text-center text-muted py-4">No active campaigns at the moment.</div>';
        return;
    }
    
    container.innerHTML = campaigns.map(campaign => \`
        <div class="campaign-card card border-0 shadow-sm mb-3">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-start mb-2">
                    <h6 class="card-title mb-0">\${campaign.title}</h6>
                    <span class="campaign-budget">\${formatCurrency(campaign.budget)}</span>
                </div>
                
                <p class="card-text text-truncate-2 mb-2">\${campaign.description}</p>
                
                <div class="row text-muted small mb-2">
                    <div class="col-md-6">
                        <i class="fas fa-map-marker-alt me-1"></i>\${campaign.location}
                    </div>
                    <div class="col-md-6">
                        <i class="fas fa-calendar me-1"></i>Deadline: \${formatDate(campaign.application_deadline)}
                    </div>
                </div>
                
                <div class="d-flex justify-content-between align-items-center">
                    <span class="status-badge status-\${campaign.status}">\${campaign.status.charAt(0).toUpperCase() + campaign.status.slice(1)}</span>
                    <a href="/campaigns/\${campaign.id}" class="btn btn-sm btn-outline-primary">
                        <i class="fas fa-eye me-1"></i>View Details
                    </a>
                </div>
            </div>
        </div>
    \`).join('');
}
</script>
`}) %>