<%- include('../layout', {body: `
<div class="container py-4">
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <h1 class="gradient-text-hero">
                    <i class="fas fa-shield-alt me-2"></i>Admin Dashboard
                </h1>
                <span class="badge bg-danger fs-6">Admin Only</span>
            </div>
            <p class="text-muted">Manage user registrations and view system data</p>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card dashboard-card h-100">
                <div class="card-body text-center">
                    <div class="feature-icon feature-icon-emerald mx-auto mb-3">
