# Production Environment Configuration
NODE_ENV=production
PORT=3000

# Database Configuration (Railway PostgreSQL)
# These will be automatically set by Railway
DB_HOST=${{PGHOST}}
DB_PORT=${{PGPORT}}
DB_NAME=${{PGDATABASE}}
DB_USER=${{PGUSER}}
DB_PASSWORD=${{PGPASSWORD}}

# JWT Configuration (CHANGE THESE!)
JWT_SECRET=prod_super_secret_jwt_key_change_this_random_string_12345
JWT_EXPIRES_IN=7d

# Email Configuration (SendGrid)
EMAIL_HOST=smtp.sendgrid.net
EMAIL_PORT=587
EMAIL_USER=apikey
EMAIL_PASSWORD=your_sendgrid_api_key_here

# File Upload Configuration
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./src/public/uploads

# Commission Configuration
DEFAULT_COMMISSION_RATE=0.00

# Security Headers
HELMET_ENABLED=true
RATE_LIMIT_ENABLED=true